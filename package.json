{
	"name": "streamer-command-center",
	"version": "0.0.1",
	"description": "",
	"author": "SuspiciousLookingOwl",
	"scripts": {
		"build": "node build.js",
		"build:server": "tsc && npm run copy-server-assets && npx webpack && pkgx build build/index.js -t node12-win-x86",
		"build:web": "npm run build --prefix ./src/web && copyfiles -u 4 ./src/web/dist/spa/**/* ./dist/static ",
		"dev": "concurrently --kill-others \"npm:dev:web\" \"npm:dev:server\"",
		"dev:server": "tsc-watch --onSuccess \"npm run dev:server:in\"",
		"dev:server:in": "npm run copy-server-assets && node .",
		"dev:web": "npm run serve --prefix ./src/web",
		"copy-server-assets": "copyfiles -u 1 ./src/template/* ./dist"
	},
	"main": "dist/index.js",
	"dependencies": {
		"@koa/cors": "^3.1.0",
		"bopen": "^2.5.0",
		"co-body": "^6.1.0",
		"colors": "^1.4.0",
		"google-tts-api": "^2.0.1",
		"html-minifier-terser": "^5.1.1",
		"karyakarsa": "0.0.1-rc.1",
		"koa": "^2.13.1",
		"koa-mount": "^4.0.0",
		"koa-router": "^10.0.0",
		"regenerator-runtime": "^0.13.7",
		"saweria": "^1.2.5",
		"ws": "^7.4.4"
	},
	"devDependencies": {
		"@babel/core": "^7.13.1",
		"@babel/preset-env": "^7.13.5",
		"@types/co-body": "^5.1.0",
		"@types/html-minifier-terser": "^5.1.1",
		"@types/koa": "^2.13.1",
		"@types/koa-mount": "^4.0.0",
		"@types/koa-router": "^7.4.1",
		"@types/koa-static": "^4.0.1",
		"@types/koa__cors": "^3.0.2",
		"@types/node": "^14.14.33",
		"@types/ws": "^7.4.0",
		"archiver": "^5.3.0",
		"babel-loader": "^8.2.2",
		"concurrently": "^6.0.0",
		"copyfiles": "^2.4.1",
		"cross-env": "^7.0.3",
		"eslint": "^7.21.0",
		"koa-static": "^5.0.0",
		"terser-webpack-plugin": "^5.1.1",
		"tsc-watch": "^4.2.9",
		"typescript": "^4.2.3",
		"webpack": "^5.25.1",
		"webpack-cli": "^4.5.0"
	},
	"bin": "dist/index.js",
	"keywords": [],
